<div style="font-family: Times New Roman; background-image: url('https://www.w3schools.com/cssref/img_tree.gif'); background-repeat: no-repeat;">
<div>LOGO</div>
<div>Menu</div>
<div style="display: grid; grid-template-columns: 1fr 1fr;">
{{#each categories}}

<div style="border: 1px solid black; padding: 5px; margin: 5px;">
  <img src="{{image}}" style="border-radius: 100%; max-width: 20px;"/>
  <h1 id="{{name}}_header">{{name}}</h1>
  <div id="{{name}}_items" class="body" style="display: block;">
    {{#each items}}
    <div>
       {{name}} <img src="{{image}}" style="border-radius: 100%; max-width: 20px; display: inline;"/>
    </div>
    {{/each}}
  </div>
</div>
{{/each}}
</div>
</div>
</div>


<script type="text/javascript">
document.getElementById("birre_items").style.display = "none"

document.getElementById("birre_header").onclick = function() {
const disp = document.getElementById("birre_items").style.display

if (disp == "block") {
  document.getElementById("birre_items").style.display = "none"
}
else {
  document.getElementById("birre_items").style.display = "block"
}
}
</script>