    height: 300px;
    display: flex;
    justify-content: center;
    padding: 10px; 
    margin: 10px;
}

.menu {
    display: flex;
    justify-content: center;
    border: none;
    padding: 20px; 
    margin: 20px;
    font-weight: bold;
    font-size:60px;
}

.center-font {
    margin: auto; 
    width: 15%
}  

.categories {
    display: flex; 
    flex-direction: column;
    } 

.eachcategory {
    border: 3px solid black;
    padding: 30px; 
    margin: 30px;
    font-weight: bolder;
    font-size:60px;
}   

.eachcategory > :nth-child(1) {
    background-position: right;
    background-image: url('images/arrow_point_right.png');
    background-repeat: no-repeat;
    background-size: contain;
    justify-content: center;
    display: flex; 
}

.eachcategory > :nth-child(2) {
   font-family: Serif;
   font-size: 30px;
   font-weight:bold;
   color: black;
   display: block;
   }